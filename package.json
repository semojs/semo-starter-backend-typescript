{
  "name": "semo-backend-starter",
  "private": true,
  "version": "0.0.0",
  "description": "A Node.js backend starter",
  "main": "index.js",
  "scripts": {
    "start": "DEBUG=application NODE_ENV=development ts-node-dev src/index.ts",
    "start:dist": "DEBUG=application NODE_ENV=development node dist/index.js",
    "start:pm2": "DEBUG=application NODE_ENV=development npm run build && pm2 startOrRestart deploy/development/pm2.yml && pm2 logs application",
    "stop:pm2": "pm2 delete all",
    "watch": "tsc -w",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "test": "TS_NODE_TRANSPILE_ONLY=1 NODE_ENV=test mocha",
    "docs:typedoc": "mkdir -p doc/.vuepress/public/typedoc && typedoc src",
    "docs:apidoc": "mkdir -p doc/.vuepress/public/apidoc && apidoc -i src/controller/ -o doc/.vuepress/public/apidoc",
    "docs:dev": "npm run docs:typedoc && npm run docs:apidoc && vuepress dev doc",
    "docs:build": "npm run docs:typedoc && npm run docs:apidoc && vuepress build doc",
    "repl": "semo repl",
    "sequelize": "sequelize",
    "db:migrate": "npm run sequelize db:migrate",
    "cron": "DEBUG=application,semo-* semo cron",
    "semo": "npx semo",
    "copyfiles": "copyfiles -u 1 -a src/**/*.yml dist -E"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@semo/cli": "1.5.8",
    "@semo/core": "1.5.8",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "kcors": "^2.2.2",
    "koa": "2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "3.2.1",
    "koa-router": "^10.0.0",
    "moment": "^2.29.1",
    "reflect-metadata": "0.1.13",
    "routing-controllers": "0.9.0-alpha.6",
    "semo-plugin-api": "1.0.3",
    "semo-plugin-application": "1.5.8",
    "semo-plugin-cron": "1.0.0",
    "semo-plugin-hook": "1.5.8",
    "semo-plugin-redis": "1.0.3",
    "semo-plugin-script": "1.5.8",
    "semo-plugin-sequelize": "2.0.8",
    "sequelize-cli": "6.2.0",
    "typedi": "0.8.0"
  },
  "devDependencies": {
    "@testdeck/di-typedi": "0.1.2",
    "@testdeck/mocha": "0.1.2",
    "@types/kcors": "2.2.3",
    "@types/koa": "2.11.6",
    "@types/koa-bodyparser": "4.3.0",
    "@types/mocha": "8.0.4",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "apidoc": "^0.25.0",
    "copyfiles": "2.4.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "espower-typescript": "9.0.2",
    "intelli-espower-loader": "1.0.1",
    "mocha": "8.2.1",
    "pm2": "4.5.0",
    "power-assert": "1.6.1",
    "source-map-support": "0.5.19",
    "supertest": "^6.0.1",
    "ts-node": "9.0.0",
    "ts-node-dev": "1.0.0",
    "typedoc": "0.19.2",
    "typescript": "4.0.5",
    "vuepress": "1.7.1"
  }
}
